{
  "name": "league-skin-selector",
  "version": "1.4.3",
  "type": "commonjs",
  "description": "League of Legends skin selector using LCU API",
  "main": "dist/main/electron-main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer && npm run copy:static",
    "build:main": "tsc",
    "build:renderer": "esbuild src/renderer/client.ts --bundle --outfile=dist/renderer/client.js --format=iife --platform=browser --target=es2020",
    "copy:static": "copyfiles -u 2 \"src/renderer/*.html\" \"src/renderer/*.css\" dist/renderer",
    "start": "node dist/main/index.js",
    "dev": "tsx src/main/index.ts",
    "electron": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "league of legends",
    "lcu",
    "skin selector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hasagi/core": "^0.6.9",
    "axios": "^1.6.0",
    "electron-updater": "^6.7.3",
    "express": "^5.0.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.0.0",
    "@types/qrcode": "^1.5.6",
    "copyfiles": "^2.4.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "globals": "^17.0.0",
    "htmlhint": "^1.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "overrides": {
    "rimraf": "6.1.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.html": "htmlhint"
  },
  "build": {
    "appId": "com.league.skinselector",
    "productName": "League Skin Selector",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "tg-tjmitchell",
      "repo": "skin-selector",
      "private": false
    }
  }
}
